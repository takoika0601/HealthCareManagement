<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TextAppearance" parent="android:TextAppearance">
    </style>
    
    <style name="TextAppearance.MonthView_MiniDayLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_other_month_day_number</item>
    </style>
    
    <style name="MonthView_MiniMonthLabel">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_mini_day_number</item>
    </style>
    
    <style name="MonthView_DayLabel">
        <item name="android:layout_width">29dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textAppearance">@style/TextAppearance.MonthView_DayLabel</item>
    </style>
    
    <style name="TextAppearance.MonthView_DayLabel">
        <item name="android:textSize">@dimen/day_label_text_size</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:textColor">@color/month_day_names_color</item>
    </style>

</resources>