<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.akiguchilab.healthcaremanagement">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.CountService"
            android:enabled="true">
        </service>

        <receiver
            android:name=".service.CountReceiver"
            android:enabled="true">
        </receiver>

        <activity
            android:name=".training.TrainingSelectActivity"
            android:label="@string/title_activity_trainingselect"
            android:screenOrientation="portrait" />
        <activity
            android:name=".training.TrainingActivity"
            android:label="@string/title_activity_training"
            android:screenOrientation="portrait" />
        <activity
            android:name=".training.SettingViewActivity"
            android:label="@string/title_activity_setting_view"
            android:screenOrientation="portrait" />
        <activity
            android:name=".training.TrainingSetting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".geneticalgorithm.GA"
            android:label="GA"
            android:screenOrientation="portrait" />
        <activity
            android:name=".camera.CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" />
        <activity
            android:name=".calendar.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:screenOrientation="portrait" />
    </application>

</manifest>
