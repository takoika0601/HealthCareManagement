<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/genetic_wall"
                tools:context="co.jp.trainingtest.SettingViewActivity">

    <LinearLayout
        android:id="@+id/settingLinear1"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/settingText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目標回数を入力してください"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingLinear2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/settingLinear1">

        <TextView
            android:id="@+id/settingText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標回数"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/settingEdit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:background="@android:color/white"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/settingText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="回"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/settingTable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/settingLinear2"
        android:layout_alignParentTop="false"
        android:baselineAligned="false"
        android:layout_centerInParent="true"
        android:stretchColumns="0,1,2">

        <TableRow android:layout_width="wrap_content">

            <Button
                android:id="@+id/settingButton1"
                android:text="1"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButton2"
                android:text="2"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButton3"
                android:text="3"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/settingButton4"
                android:text="4"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButton5"
                android:text="5"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButton6"
                android:text="6"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/settingButton7"
                android:text="7"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButton8"
                android:text="8"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButton9"
                android:text="9"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/settingButton0"
                android:text="0"
                android:textSize="25sp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>

            <Button
                android:id="@+id/settingButtonClear"
                android:text="クリア"
                android:textSize="25sp"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/settingButtonRegister"
                android:text="登録"
                android:textSize="25sp"
                android:layout_span="3"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
