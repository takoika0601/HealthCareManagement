<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/genetic_wall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="ボタンを押すと計測が始まります。\n登録する運動を5回行ってください。\n運動を行った後再度ボタンを押して\n計測を終了してください。"
            android:textSize="18dp"/>


        <Button
            android:id="@+id/genetic_run_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_frame"
            android:text="開始"/>

        <LinearLayout
            android:id="@+id/genetic_linearLayout_afterRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="設定が完了しました！\n練習ボタンで練習ができます。"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/genetic_practice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_frame"
                android:text="練習"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="設定を完了する場合は、\n完了ボタンを押してください"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/genetic_complete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_frame"
                android:text="完了"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>