<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#F44336">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/main_progressCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@android:color/white">

        <com.todddavies.components.progressbar.ProgressWheel
            android:id="@+id/main_spinner"
            android:layout_width="250dp"
            android:layout_height="250dp"
            ProgressWheel:text="本日の進行度です"
            ProgressWheel:textColor="#222"
            ProgressWheel:textSize="@dimen/textsize_medium"
            ProgressWheel:rimColor="#FFEBEE"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barColor="#EF5350"
            ProgressWheel:barWidth="10dp"
            ProgressWheel:rimWidth="5dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cardLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/main_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/calendar"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_calendar"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="カレンダー"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/main_danberu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/main_calendar"
            android:background="@drawable/danberu"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/main_danberu"
            android:layout_alignRight="@id/main_danberu"
            android:layout_below="@+id/main_danberu"
            android:gravity="center"
            android:text="補強運動"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/main_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/main_calendar"
            android:background="@drawable/camera"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/main_camera"
            android:layout_alignRight="@+id/main_camera"
            android:layout_below="@+id/main_camera"
            android:gravity="center"
            android:text="カメラ"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/counterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/menuLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textSize="@dimen/textsize_xlarge"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/counter"
            android:layout_toRightOf="@+id/counter"
            android:text="歩"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/textsize_large"/>
    </RelativeLayout>
</LinearLayout>
