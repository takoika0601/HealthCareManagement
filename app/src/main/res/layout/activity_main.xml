<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/kabe">

    <RelativeLayout
        android:id="@+id/cornerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/clover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxHeight="80dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/clover"/>

        <ImageButton
            android:id="@+id/apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxHeight="80dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/apple"/>

        <ImageButton
            android:id="@+id/dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxHeight="80dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dog"/>

        <ImageButton
            android:id="@+id/bard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/clover"
            android:layout_alignTop="@id/dog"
            android:scaleType="centerCrop"
            android:background="#00ffffff"
            android:src="@drawable/bard"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/centerInParentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"></LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/centerInParentLayout">

        <ImageView
            android:id="@+id/walkman"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:background="@drawable/walkman"
            android:contentDescription="歩行者画像"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|top"
            android:adjustViewBounds="true"
            android:background="@drawable/goal"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/counterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/frameLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="60sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/counter"
            android:layout_toRightOf="@+id/counter"
            android:text="歩"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/frameLayout">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/danberu"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:text="補強運動"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/main_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@drawable/calendar"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_calendar"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="カレンダー"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/main_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="@drawable/camera"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="カメラ"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>
