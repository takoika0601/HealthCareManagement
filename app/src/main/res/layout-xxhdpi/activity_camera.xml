<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/b"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="jp.co.akiguchilab.healthcaremanagement.camera.CameraActivity">

    <TextView
        android:id="@+id/camera_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="写真をアップロード"
        android:textSize="36sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/camera_subtext"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/camera_text"
        android:text="運動中の様子や風景など\n自由に撮ろう！"
        android:textSize="28dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_subtext"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/camera_breakfast_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="ギャラリーから選択する"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/camera_lunch_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="カメラで\n撮影する"
            android:textSize="40sp"/>

    </LinearLayout>
</RelativeLayout>
